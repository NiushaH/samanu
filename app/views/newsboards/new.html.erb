<h1 class="title">New Newsboard</h1>

<div class="section">
  <%= simple_form_for @newsboard do |f| %>
  <div class="field">
    <div class="control"></div>
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
  </div>



  <%= f.button :submit, 'Name My Newsboard', class: "button-is-primary"  %>
  <% end %>

</div>